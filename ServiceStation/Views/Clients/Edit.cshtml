@model ServiceStation.ViewModels.ClientsViewModel
@{
    ViewBag.Title = "Edit Client Information";
    TempData.Keep("firstName");
    TempData.Keep("lastName");
}

        @using(Html.BeginForm("Edit", "Clients"))
        {
            @Html.AntiForgeryToken();
<h2>Edit Client Information</h2> 
<div class="editor-label"> 
    First Name: 
</div>     
         
             @Html.HiddenFor(model => model.ClientsID) 
<div class="editor-field"> 
    @Html.EditorFor(model => model.FirstName) 
    @Html.ValidationMessageFor(model => model.FirstName) 
</div>
<div class="editor-label"> 
    Last Name: 
</div>   
<div class="editor-field"> 
    @Html.EditorFor(model => model.LastName) 
    @Html.ValidationMessageFor(model => model.LastName) 
</div>
<div class="editor-label"> 
    Date of Birth:
</div>
<div class="editor-field"> 
    @Html.EditorFor(model => model.BirthDate) 
    @Html.ValidationMessageFor(model => model.BirthDate) 
</div>
<div class="editor-label"> 
    Address:
</div>
<div class="editor-field"> 
    @Html.EditorFor(model => model.Address) 
    @Html.ValidationMessageFor(model => model.Address) 
</div>
<div class="editor-label"> 
    Phone:
</div>
<div class="editor-field"> 
    @Html.EditorFor(model => model.Phone) 
    @Html.ValidationMessageFor(model => model.Phone) 
</div>
<div class="editor-label"> 
    Email:
</div>
<div class="editor-field"> 
    @Html.EditorFor(model => model.Email) 
    @Html.ValidationMessageFor(model => model.Email) 
</div>
<p><input type="submit" value="Save" /></p>
        }

<div class="links">@Html.ActionLink("Back to Clients List", "List", "Clients", new { firstName=TempData["firstName"], lastName=TempData["lastName"] }, null)</div>